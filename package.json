{
  "name": "@coorpacademy/app-forum",
  "version": "0.0.1",
  "description": "CoorpAcademy forum",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CoorpAcademy/app-forum"
  },
  "scripts": {
    "build": "webpack",
    "server": "node src/sandbox/index.js",
    "start": "npm run server",
    "test": "npm run lint && npm run nyc",
    "lint": "eslint src/ *.js *.json --ext .js,.json",
    "ava": "BABEL_ENV=test ava",
    "nyc": "BABEL_ENV=test nyc npm run ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "homepage": "https://github.com/CoorpAcademy/app-forum#readme",
  "devDependencies": {
    "@coorpacademy/eslint-plugin-coorpacademy": "^2.0.0",
    "ava": "^0.16.0",
    "coveralls": "^2.11.13",
    "eslint": "^3.5.0",
    "nyc": "^8.3.0",
    "webpack": "^2.1.0-beta.25"
  },
  "dependencies": {
    "@coorpacademy/appster": "0.0.3",
    "@coorpacademy/components": "3.2.0",
    "@coorpacademy/treantjs-core": "3.0.3",
    "lodash": "^4.15.0",
    "redux": "^3.6.0",
    "redux-api-middleware": "^2.0.0-beta.1",
    "webpack": "^2.1.0-beta.25"
  },
  "ava": {
    "files": [
      "src/**/test/**/*.js",
      "!node_module/**/*"
    ],
    "require": [
      "babel-core/register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "public/**/*",
      "src/**/test/**/*"
    ],
    "require": [
      "babel-core/register"
    ],
    "all": true
  }
}
